// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id        String   @id @default(uuid())
  name      String   @db.VarChar(255)
  slug      String   @unique @db.VarChar(255)
  goal      String   @db.Text
  shouldbe  String   @db.Text
  deadline  DateTime
  color     String   @db.VarChar(20)
  status    String   @db.VarChar(50) @default("active")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tasks     Task[]
  stats     ProjectStats?

  @@map("projects")
}

model Task {
  id          String   @id @default(uuid())
  title       String   @db.VarChar(255)
  description String   @db.Text
  status      String   @db.VarChar(50) @default("scheduled")
  kind        String   @db.VarChar(50) @default("task")
  deadline    DateTime
  projectId   String?  @db.VarChar(36)
  project     Project? @relation(fields: [projectId], references: [id], onDelete: SetNull)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("tasks")
}

model ProjectStats {
  id        String   @id @default(uuid())
  projectId String   @unique @db.VarChar(36)
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  kinds     Json     @default("{\"milestone\": 0, \"task\": 0, \"total\": 0}")
  states    Json     @default("{\"scheduled\": 0, \"archived\": 0, \"completed\": 0}")
  total     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("project_stats")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique @db.VarChar(255)
  name      String   @db.VarChar(255)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}
